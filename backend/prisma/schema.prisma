// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// MODELS - Multi-tenancy & Auth
// ============================================

model Tenant {
  id               String   @id @default(cuid())
  nome             String
  slug             String   @unique
  whatsapp         String?
  email            String   @unique
  plano            String   @default("FREE") // FREE, BASIC, PRO, ENTERPRISE
  ativo            Boolean  @default(true)
  stripeCustomerId String?  @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  usuarios         User[]
  clientes         Cliente[]
  veiculos         Veiculo[]
  servicos         Servico[]
  agendamentos     Agendamento[]
  bloqueios        BloqueioHorario[]
  configuracoes    Configuracao[]

  @@index([slug])
  @@map("tenants")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  senha     String   // bcrypt hash
  nome      String
  role      String   @default("ATENDENTE") // OWNER, ADMIN, ATENDENTE
  ativo     Boolean  @default(true)
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([email])
  @@map("users")
}

// ============================================
// MODELS - Sistema de Agendamento
// ============================================

model Cliente {
  id          String   @id @default(cuid())
  nome        String
  telefone    String
  whatsapp    String?
  email       String?
  cpfCnpj     String?
  observacoes String?
  tenantId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  veiculos     Veiculo[]
  agendamentos Agendamento[]

  @@unique([tenantId, telefone])
  @@unique([tenantId, email])
  @@index([tenantId])
  @@index([telefone])
  @@index([email])
  @@map("clientes")
}

model Veiculo {
  id        String   @id @default(cuid())
  marca     String
  modelo    String
  ano       Int
  placa     String
  cor       String?
  clienteId String
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  cliente      Cliente       @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  agendamentos Agendamento[]

  @@unique([tenantId, placa])
  @@index([tenantId])
  @@index([placa])
  @@index([clienteId])
  @@map("veiculos")
}

model Servico {
  id              String   @id @default(cuid())
  nome            String
  descricao       String?
  categoria       String
  duracaoMinutos  Int
  preco           Float
  ativo           Boolean  @default(true)
  imagemUrl       String?
  observacoes     String?
  tenantId        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  tenant       Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  agendamentos AgendamentoServico[]

  @@index([tenantId])
  @@index([categoria])
  @@index([ativo])
  @@map("servicos")
}

model Agendamento {
  id          String   @id @default(cuid())
  dataHora    DateTime
  status      String   @default("PENDENTE")
  clienteId   String
  veiculoId   String?
  observacoes String?
  valorTotal  Float?
  tenantId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tenant        Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  cliente       Cliente              @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  veiculo       Veiculo?             @relation(fields: [veiculoId], references: [id], onDelete: SetNull)
  servicos      AgendamentoServico[]
  notificacoes  Notificacao[]

  @@index([tenantId])
  @@index([dataHora])
  @@index([status])
  @@index([clienteId])
  @@index([veiculoId])
  @@map("agendamentos")
}

model AgendamentoServico {
  id            String @id @default(cuid())
  agendamentoId String
  servicoId     String
  preco         Float

  // Relations
  agendamento Agendamento @relation(fields: [agendamentoId], references: [id], onDelete: Cascade)
  servico     Servico     @relation(fields: [servicoId], references: [id], onDelete: Restrict)

  @@unique([agendamentoId, servicoId])
  @@index([agendamentoId])
  @@index([servicoId])
  @@map("agendamento_servicos")
}

model Notificacao {
  id            String   @id @default(cuid())
  agendamentoId String
  tipo          String
  status        String   @default("PENDENTE")
  agendadaPara  DateTime?
  enviadaEm     DateTime?
  mensagem      String
  createdAt     DateTime @default(now())

  // Relations
  agendamento Agendamento @relation(fields: [agendamentoId], references: [id], onDelete: Cascade)

  @@index([agendamentoId])
  @@index([status])
  @@map("notificacoes")
}

model Configuracao {
  id        String   @id @default(cuid())
  chave     String
  valor     String
  descricao String?
  tenantId  String
  updatedAt DateTime @updatedAt

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, chave])
  @@index([tenantId])
  @@index([chave])
  @@map("configuracoes")
}

model BloqueioHorario {
  id              String    @id @default(cuid())
  tipo            String    // "PONTUAL" ou "RECORRENTE"
  diaSemana       Int?      // 0-6 (domingo-sábado) - apenas para RECORRENTE
  dataEspecifica  DateTime? // apenas para PONTUAL
  horaInicio      String    // formato "HH:mm" (ex: "10:00")
  horaFim         String    // formato "HH:mm" (ex: "12:00")
  diaInteiro      Boolean   @default(false) // se true, bloqueia o dia todo
  motivo          String?   // "Dentista", "Reunião", "Feriado", etc
  ativo           Boolean   @default(true)
  tenantId        String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tipo])
  @@index([dataEspecifica])
  @@index([diaSemana])
  @@index([ativo])
  @@map("bloqueios_horario")
}

